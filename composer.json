{
    "name": "patrickkusebauch/nette-psalm-plugin",
    "description": "Psalm plugin for Nette Framework",
    "type": "psalm-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Patrick Kusebauch",
            "email": "patrick.kusebauch@gmail.com"
        }
    ],
    "require": {
        "vimeo/psalm": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "extra": {
        "psalm" : {
            "pluginClass": "PatrickKusebauch\\NettePsalmPlugin\\Plugin"
        }
    },
    "autoload": {
        "psr-4": {
            "PatrickKusebauch\\NettePsalmPlugin\\": ["."]
        }
    },
    "scripts" : {
        "check": [
            "@cs-check",
            "@analyze"
        ],
        "analyze": "psalm",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    }
}
